{
  "name": "reubin",
  "repository": "charliewilco/reubin.app",
  "author": "Charlie âš¡ <charliewilc0@protonmail.com>",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-graphql-request": "^4.5.5",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "graphql-tag": "^2.12.6",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "prettier-plugin-prisma": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "pretty-quick": "^3.1.2",
    "turbo": "^1.5.5",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "prepare": "husky install",
    "generate": "graphql-codegen",
    "format": "pretty-quick --staged",
    "db": "npx prisma studio --schema apps/graphql/prisma/schema.prisma"
  },
  "prettier": {
    "printWidth": 95,
    "useTabs": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "plugins": [
      "prettier-plugin-prisma",
      "prettier-plugin-tailwindcss"
    ]
  }
}
