{
  "name": "reubin",
  "repository": "charliewilco/reubin.app",
  "author": "Charlie âš¡ <charliewilc0@protonmail.com>",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "turbo": "^1.1.4",
    "jest": "^27.5.1",
    "husky": "^8.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-prisma": "^3.14.0",
    "prettier-plugin-tailwindcss": "^0.1.11"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 95,
    "useTabs": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "plugins": [
      "prettier-plugin-prisma",
      "prettier-plugin-tailwindcss"
    ]
  }
}
