{
	"name": "reubin",
	"repository": "charliewilco/reubin.app",
	"author": "Charlie âš¡ <charliewilc0@protonmail.com>",
	"license": "MIT",
	"version": "1.0.0",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "jest --verbose",
		"test:ci": "jest --verbose --ci --runInBand --no-cache",
		"generate": "graphql-codegen",
		"prepare": "husky install && npx prisma generate",
		"format": "pretty-quick --staged",
		"db:generate": "prisma generate",
		"db:push": "prisma db push"
	},
	"dependencies": {
		"@graphql-tools/schema": "^9.0.2",
		"@graphql-yoga/common": "^2.12.11",
		"@graphql-yoga/node": "^2.13.12",
		"@headlessui/react": "^1.6.6",
		"@prisma/client": "^4.3.1",
		"@radix-ui/colors": "^0.1.8",
		"@stitches/react": "^1.2.8",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.7",
		"autoprefixer": "^10.4.7",
		"axios": "^0.27.2",
		"cheerio": "^1.0.0-rc.11",
		"cuid": "^2.1.8",
		"date-fns": "^2.29.2",
		"entities": "^4.4.0",
		"fathom-client": "^3.5.0",
		"formik": "^2.2.9",
		"graphql": "^16.6.0",
		"graphql-request": "^5.0.0",
		"graphql-scalars": "^1.17.0",
		"graphql-tag": "^2.12.6",
		"html-entities": "^2.3.2",
		"iconv-lite": "^0.6.3",
		"next": "^12.2.5",
		"postcss": "^8.4.14",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.4.0",
		"sanitize-html": "^2.7.0",
		"swr": "^1.3.0",
		"tailwindcss": "^3.1.8",
		"typescript": "^4.8.2",
		"xml2js": "^0.4.23"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^2.12.0",
		"@graphql-codegen/typescript": "^2.7.3",
		"@graphql-codegen/typescript-graphql-request": "^4.5.4",
		"@graphql-codegen/typescript-operations": "^2.5.3",
		"@graphql-codegen/typescript-resolvers": "^2.7.3",
		"@types/jest": "^28.1.1",
		"@types/node": "^18.0.0",
		"@types/react": "^18.0.14",
		"@types/react-dom": "^18.0.5",
		"@types/sanitize-html": "^2.3.1",
		"@types/xml2js": "^0.4.11",
		"eslint": "^8.23.0",
		"eslint-config-next": "^12.1.6",
		"husky": "^8.0.1",
		"jest": "^29.0.2",
		"jest-environment-jsdom": "^29.0.2",
		"prettier": "^2.7.1",
		"prettier-plugin-prisma": "^4.1.0",
		"prettier-plugin-tailwindcss": "^0.1.11",
		"pretty-quick": "^3.1.3",
		"prisma": "^4.3.0"
	},
	"eslintConfig": {
		"extends": "next/core-web-vitals"
	},
	"prettier": {
		"printWidth": 95,
		"useTabs": true,
		"tabWidth": 2,
		"bracketSpacing": true,
		"bracketSameLine": true,
		"plugins": [
			"prettier-plugin-prisma",
			"prettier-plugin-tailwindcss"
		]
	},
	"graphql": {
		"schema": "server/typedefs.ts",
		"extensions": {
			"codegen": {
				"generates": {
					"./server/types.ts": {
						"plugins": [
							"typescript",
							"typescript-resolvers"
						]
					},
					"./lib/types.ts": {
						"documents": "lib/*.graphql",
						"plugins": [
							"typescript",
							"typescript-operations",
							"typescript-graphql-request"
						]
					}
				},
				"hooks": {
					"afterAllFileWrite": [
						"prettier --write"
					]
				}
			}
		}
	}
}
