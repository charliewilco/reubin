{
	"name": "reubin",
	"repository": "charliewilco/reubin.app",
	"author": "Charlie âš¡ <charliewilc0@protonmail.com>",
	"version": "1.2.1",
	"workspaces": [
		"apps/*",
		"e2e",
		"packages/*"
	],
	"scripts": {
		"start": "npm start --workspace=@reubin/graphql",
		"build": "turbo build",
		"test": "turbo test --filter=!@reubin/e2e",
		"e2e": "turbo test --filter=@reubin/e2e",
		"lint": "turbo lint",
		"types": "turbo types",
		"dev": "turbo dev --parallel",
		"format": "pretty-quick --staged",
		"generate": "graphql-codegen --config scripts/.graphqlrc.ts",
		"git": "node scripts/git.mjs",
		"clean": "node scripts/clean.mjs --all",
		"seed": "node scripts/seed.mjs",
		"db": "node scripts/db.mjs --push"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^2.16.1",
		"@graphql-codegen/typescript": "^2.8.5",
		"@graphql-codegen/typescript-graphql-request": "^4.5.8",
		"@graphql-codegen/typescript-operations": "^2.5.10",
		"@graphql-codegen/typescript-resolvers": "^2.7.10",
		"@prisma/migrate": "^4.8.0",
		"@types/node": "^18.7.20",
		"arg": "^5.0.2",
		"del": "^7.0.0",
		"graphql": "^16.6.0",
		"graphql-request": "^5.1.0",
		"graphql-tag": "^2.12.6",
		"husky": "^8.0.1",
		"jest": "^29.2.2",
		"prettier": "^2.8.0",
		"prettier-plugin-prisma": "^4.8.0",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"pretty-quick": "^3.1.2",
		"prisma": "^4.8.0",
		"rss-parser": "^3.12.0",
		"turbo": "^1.6.3",
		"typescript": "^4.9.4"
	},
	"prettier": {
		"printWidth": 95,
		"useTabs": true,
		"tabWidth": 2,
		"bracketSpacing": true,
		"bracketSameLine": true,
		"htmlWhitespaceSensitivity": "ignore",
		"plugins": [
			"prettier-plugin-prisma",
			"prettier-plugin-tailwindcss"
		]
	}
}
