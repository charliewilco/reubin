    "@prisma/migrate": "4.4.0",
    "arg": "^5.0.2",
    "del": "^7.0.0",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "graphql-tag": "^2.12.6",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "prettier-plugin-prisma": "^4.2.0",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "pretty-quick": "^3.1.2",
    "prisma": "^4.4.0",
    "turbo": "^1.5.5",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "printWidth": 95,
