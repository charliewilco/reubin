{
	"private": true,
	"name": "reubin",
	"repository": "charliewilco/reubin.app",
	"author": "Charlie âš¡ <charliewilc0@protonmail.com>",
	"version": "1.2.3",
	"workspaces": [
		"apps/*",
		"e2e",
		"packages/*"
	],
	"scripts": {
		"start": "yarn workspace @reubin/graphql start",
		"build": "turbo build",
		"test": "turbo test --filter=!@reubin/e2e",
		"e2e": "turbo test --filter=@reubin/e2e",
		"lint": "turbo lint",
		"types": "turbo types",
		"dev": "turbo dev --parallel",
		"format": "pretty-quick --staged",
		"generate": "graphql-codegen --config scripts/.graphqlrc.ts",
		"git": "node scripts/git.mjs",
		"clean": "node scripts/clean.mjs --all",
		"seed": "node scripts/seed.mjs",
		"db": "node scripts/db.mjs --push"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^3.2.1",
		"@graphql-codegen/typescript": "^3.0.1",
		"@graphql-codegen/typescript-graphql-request": "^4.5.8",
		"@graphql-codegen/typescript-operations": "^3.0.1",
		"@graphql-codegen/typescript-resolvers": "^3.1.0",
		"@prisma/migrate": "^4.11.0",
		"@types/node": "^18.14.6",
		"arg": "^5.0.2",
		"del": "^7.0.0",
		"graphql": "^16.6.0",
		"graphql-request": "5.1.0",
		"graphql-tag": "^2.12.6",
		"husky": "^8.0.3",
		"jest": "^29.4.3",
		"prettier": "^2.8.4",
		"prettier-plugin-prisma": "^4.10.0",
		"prettier-plugin-tailwindcss": "^0.2.4",
		"pretty-quick": "^3.1.3",
		"prisma": "^4.11.0",
		"process": "^0.11.10",
		"rss-parser": "^3.12.0",
		"turbo": "^1.8.3",
		"typescript": "^4.9.5"
	},
	"prettier": {
		"printWidth": 95,
		"useTabs": true,
		"tabWidth": 2,
		"bracketSpacing": true,
		"bracketSameLine": true,
		"htmlWhitespaceSensitivity": "ignore",
		"plugins": [
			"prettier-plugin-prisma",
			"prettier-plugin-tailwindcss"
		]
	}
}
