{
	"name": "@reubin/rsskit",
	"version": "1.2.1",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"private": true,
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"bundle": "tsc",
		"types": "tsc --noEmit --pretty",
		"test": "jest --runInBand"
	},
	"dependencies": {
		"@types/xml2js": "^0.4.11",
		"entities": "^4.4.0",
		"xml2js": "^0.2.3"
	},
	"devDependencies": {
		"@types/jest": "^29.1.1",
		"@types/node": "^18.7.20",
		"@types/xml2js": "^0.4.11",
		"jest": "^29.2.2",
		"ts-jest": "^29.0.2",
		"tsup": "^6.5.0",
		"typescript": "^4.8.4"
	},
	"tsup": {
		"format": [
			"esm",
			"cjs"
		],
		"entry": [
			"src/index.ts"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"verbose": true
	}
}
